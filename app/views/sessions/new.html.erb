<% if author? %>
  <h1>Выход</h1>
  <p><%= button_to 'Выйти из блога', session_path, method: :delete %></p>
<% else %>
  <h1>Вход</h1>
  <p>Введите пароль для входа в блог:</p>
  <p> <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %></p>
      <p><%= form.label :password %></p>
      <p><%= form.text_field :password %></p>

      <p><%= form.submit 'Войти' %> </p>
    <% end %>
<% end %>